# Homebrew packages
# Run `brew bundle --file=Brewfile` to install everything

# --- CLI tools ----------------------------------------------------------------
brew "gh"                          # GitHub CLI
brew "starship"                    # Cross-shell prompt
brew "uv"                          # Fast Python package manager

# --- Casks (GUI apps & fonts) ------------------------------------------------
cask "claude-code"                 # Claude Code
cask "espanso"                     # Text expander
cask "font-fira-code-nerd-font"   # Nerd Font for terminal/editor
cask "gemini"                      # Gemini
